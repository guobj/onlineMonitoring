<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nz.onlineMonitoring.login.mapper.LoginMapper" >
    <resultMap id="BaseResultMap" type="com.nz.onlineMonitoring.login.model.Login" >
        <result column="account" property="account" jdbcType="INTEGER" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="data_name" property="data_name" jdbcType="VARCHAR" />
    </resultMap>
    <select id="login" parameterType="com.nz.onlineMonitoring.login.model.Login" resultType="com.nz.onlineMonitoring.login.model.Login">
        select * from t_login tl where tl.account = #{account} and tl.password = #{password}
    </select>
    <update id="mdiPassword" parameterType="com.nz.onlineMonitoring.login.model.Login">
        update t_login
        <set >
            <if test="password != null" >
                password = #{password,jdbcType=VARCHAR},
            </if>
        </set>
        where account = #{account,jdbcType=INTEGER}
    </update>
    
</mapper>